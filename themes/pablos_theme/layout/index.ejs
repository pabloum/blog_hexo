<div class='row text-center'>
  <div class="jumbotron">
    <h1><%= config.author %>'s Blog </h1>
    <p><%= config.subtitle %></p>
    <p><a class="btn btn-primary btn-lg" href="https://pabloum.github.io/" target="_blank" role="button">Who am I?</a></p>
  </div>

</div>


<div class="row">
  <% page.posts.each(function(post){ %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <!-- <img src="..." alt="..."> -->
      <div class="caption">
        <h3 style="text-align:center;">Article </h3>
        <ul>
            <li>
              <h3>
                  <%= post.title %>
              </h3>
              <div class='text-muted'>
                <%= date(post.date, config.date_format) %>
              </div>

              <% if(post.excerpt) { %>
                <p>
                  <%- post.excerpt %>
                </p>
                <% } %>
              </li>
            </ul>
        <p style="text-align:center;"><a href="<%- url_for(post.path) %>" class="btn btn-primary" role="button">Read</a> <a href="#" class="btn btn-default" role="button">Read later...</a> </p>
      </div>
    </div>
  </div>
  <% }) %>
</div>
